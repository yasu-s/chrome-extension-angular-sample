{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "rootDir": "src",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/main.ts",
    "src/test.ts",
    "src/**/*.spec.ts"
  ],
  "files": [
    "src/scripts/content.ts",
  ]
}
